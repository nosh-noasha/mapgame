  <p class="line" id="geo0">אז עד עכשיו היללנו ושיבחנו אותך אבל עכשיו חייב קצת לעקוץ.</p>
  <p class="line" id="geo1">אז כמובן במיוחד לסיום חידה על הנושא האהוב עליך — גיאוגרפיה.</p>
  <p class="line" id="geo2">כי מי יותר טוב ממך בלזהות מקומות במפה?</p>
</div>

<div id="ending" style="display:none">
  <p class="line" id="end0">לצערנו הגענו לסוף</p>
  <p class="line" id="end1">מקווה מאוד שנהנית, אני נהניתי לראות אותך משחק</p>
  <p class="line" id="end2">אתה בטח מבולבל איפה הקוד למתנה</p>
  <p class="line" id="end3">אם תחשוב על זה טיפה תבין שקיבלת אותו כבר לפני דקה</p>
</div>

<div class="question-container" id="questionBox">
  <img id="questionImage" src="" alt="מפה">
  <div><input type="text" id="answerInput" placeholder="הקלד כאן את תשובתך"></div>
  <div><button onclick="checkAnswer()">בדוק</button></div>
  <div id="result"></div>
</div>

<div id="message" style="display: none;"></div>

<script>
const introLines = [...document.querySelectorAll("#intro .line")];
const geoLines = [...document.querySelectorAll("#geo-intro .line")];
const endLines = [...document.querySelectorAll("#ending .line")];
let introIndex = 0;
let geoIndex = 0;
let endIndex = 0;
let showingGeo = false;
let showingPause = false;
let endingStarted = false;

function showNextIntroLine() {
  if (!showingGeo) {
    if (introIndex < introLines.length) {
      introLines[introIndex].style.display = "block";
      introIndex++;
    } else {
      document.getElementById("intro").style.display = "none";
      document.getElementById("geo-intro").style.display = "block";
      showingGeo = true;
      showNextIntroLine();
    }
  } else {
    if (geoIndex < geoLines.length) {
      geoLines[geoIndex].style.display = "block";
      geoIndex++;
    } else {
      document.getElementById("geo-intro").style.display = "none";
      showQuestion();
    }
  }
}

function showEndingLine() {
  if (endIndex < endLines.length) {
    endLines[endIndex].style.display = "block";
    endIndex++;
  }
}

window.addEventListener("click", () => {
  if (endingStarted) {
    showEndingLine();
    return;
  }

  if (showingPause) {
    const lastPause = questions[current].isLastPause;
    document.getElementById("message").style.display = "none";
    showingPause = false;
    current++;
    if (lastPause) {
      document.getElementById("ending").style.display = "block";
      endingStarted = true;
      showEndingLine();
    } else {
      showQuestion();
    }
    return;
  }

  if (!document.getElementById("questionBox").style.display || document.getElementById("questionBox").style.display === "none") {
    showNextIntroLine();
  }
});

const questions = [
  { image: "1.jpg", answer: ["חוף הצוק"] },
  { image: "2.jpg", answer: ["גבעת הספלולים"] },
  { image: "3.jpg", answer: ["נומי"] },
  { message: "כל זה היה חימום או יותר נכון הקדמה כדי שנוכל לעשות את זה פעם שנייה כמו שאני אוהבת", isPause: true },
  { image: "4.jpg", answer: ["בחא 8", "חא 8"] },
  { image: "5.jpg", answer: ["בחא 30", "חא 30"] },
  { image: "6.jpg", answer: ["בחא 10", "חא 10"] },
  { isPause: true, isLastPause: true }
];

let current = 0;

function showQuestion() {
  const q = questions[current];
  const box = document.getElementById("questionBox");
  const img = document.getElementById("questionImage");
  const input = document.getElementById("answerInput");
  const result = document.getElementById("result");
  const msg = document.getElementById("message");

  if (q.isPause) {
    box.style.display = "none";
    msg.innerText = q.message || "";
    msg.style.display = "block";
    showingPause = true;
    return;
  }

  msg.style.display = "none";
  img.src = q.image;
  input.value = "";
  result.textContent = "";
  box.style.display = "block";
}

function checkAnswer() {
  const input = document.getElementById("answerInput").value.trim();
  const result = document.getElementById("result");
  const q = questions[current];
  const normalized = input.replace(/\s|"|'/g, "");
  const isCorrect = q.answer.some(ans => normalized.includes(ans.replace(/\s/g, "")));

  if (isCorrect) {
    result.textContent = "תשובה נכונה! ✅";
    setTimeout(() => {
      current++;
      if (current < questions.length) {
        showQuestion();
      } else {
        result.textContent = "סיימת את כל החידה! 🎉";
      }
    }, 2000);
  } else {
    result.textContent = "לא נכון, נסה שוב 🙈";
  }
}
</script>

</body>
</html>

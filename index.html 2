      font-size: 18px;
      padding: 10px;
      display: none;
    }
    .question-container {
      display: none;
    }
    img {
      max-width: 80%;
      height: auto;
      border: 2px solid #ccc;
      margin-top: 20px;
    }
    input[type="text"] {
      margin-top: 20px;
      padding: 10px;
      font-size: 18px;
      width: 90%; max-width: 400px;
      direction: rtl;
    }
    button {
      margin-top: 20px;
      padding: 10px 20px;
